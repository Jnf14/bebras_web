generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  taskId       String   @unique
  engTitle     String
  dirPath      String
  filePath     String
  language     String
  title        String
  age_categories       AgeCategory[]
  computer_science_areas String[]
  computational_thinking_skills String[]
  contributors String[]
  bebras_categories Category[] 
  bebras_keywords String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Category {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  taskId String
  task Task @relation(fields: [taskId], references: [taskId], onDelete: Cascade)
  category String
  sub_categories String[]
}

model AgeCategory {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  taskId String
  task Task @relation(fields: [taskId], references: [taskId], onDelete: Cascade)
  age String
  level TaskLevel
}

enum TaskLevel {
  easy
  medium
  hard
  bonus
}

