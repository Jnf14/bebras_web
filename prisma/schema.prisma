generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  taskId       String   @unique
  engTitle     String
  dirPath      String
  filePath     String
  language     String
  title        String
  ages         Age[]
  computer_science_areas String[]
  computational_thinking_skills String[]
  contributors String[]
  bebras_categories Category[] 
  bebras_keywords String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

type Category {
  category String
  sub_categories String[]
}

type Age {
  age String
  level TaskLevel
}

enum TaskLevel {
  easy
  medium
  hard
  bonus
}

